<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Hiệu ứng gradient -->
    <gradient
        android:startColor="#2DCEE3"
        android:endColor="#C1ECBC"
        android:angle="90"/> <!-- Gradient từ trên xuống dưới -->

    <!-- Đường viền -->
    <stroke
        android:width="2dp"
        android:color="#03A9F4"/>

    <!-- Bo góc -->
    <corners
        android:radius="30dp"/>

    <!-- Padding nếu cần -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
